    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'unison-raspberry-pi-ir-hat'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=unison-raspberry-pi-ir-hat",
                    "--package=unison-raspberry-pi-ir-hat"
                ],
                "filter": {
                    "name": "unison-raspberry-pi-ir-hat",
                    "kind": "bin"
                }
            },
            "args": [
                "--config",
                "example.config.json",
                "--port",
                "/dev/pts/6"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'unison-raspberry-pi-ir-hat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=unison-raspberry-pi-ir-hat",
                    "--package=unison-raspberry-pi-ir-hat"
                ],
                "filter": {
                    "name": "unison-raspberry-pi-ir-hat",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}